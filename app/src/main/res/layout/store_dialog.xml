<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             >

    <TextView
            android:id="@+id/storeDecorTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="裝飾小羊"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" android:background="#FFCCCC" android:layout_marginTop="1dp"
            android:paddingTop="1dp" android:paddingBottom="1dp"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/decorStoreRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/store"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/storeDecorTitle"/>
    <TextView
            android:id="@+id/storeBackTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="布置環境"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp" android:background="#FFCCCC"
            app:layout_constraintTop_toBottomOf="@+id/decorStoreRecyclerView" android:paddingBottom="1dp"
            android:paddingTop="1dp"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/backStoreRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/store"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/storeBackTitle">
    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>