<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
            android:id="@+id/achievementName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            android:id="@+id/achievementContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/achievementName"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:gravity="center" android:textColor="#000000"
            app:layout_constraintTop_toTopOf="@+id/achievementName"
            app:layout_constraintBottom_toBottomOf="@+id/achievementName"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:background="#00DDAA" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/achievementName"/>
</android.support.constraint.ConstraintLayout>