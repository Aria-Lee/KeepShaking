<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#444444</item>
    </style>
    <style name="Loading" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#0066FF</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#FF8888</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="BaseAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#02C3AF</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="CollectionAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#7CD1FD</item>
        <item name="android:textColor">#444444</item>
    </style>

</resources>
